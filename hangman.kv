<HangmanGUI>:
	orientation: 'vertical'
	canvas:
		Color:
			rgba: .7, .7, .7, 1
		Rectangle:
			pos: self.pos
			size: self.size
	
	GridLayout:
		id: alphabet
		cols: 2
		canvas.before:
			Color:
				rgba: .9, .9, .9, 1
			Rectangle:
				pos: self.pos
				size: self.size
		BoxLayout:
			orientation: 'vertical'
			size_hint: .3, .75
			
			GridLayout:
				cols: 3
				id: remaining_guesses
				size_hint: 1, .6
				pos_hint: {'center_x': 0.5}
			Label:
				color: 0, 0, 0, 1
				size_hint: None, .05
				pos_hint: {'center_x': 0.5}
				text: "Wrong Guesses:"
			TextInput:
				size_hint: 1, .15
				pos_hint: {'center_x': 0.5}
				multiline: False
				readonly: True
				id: wrong_text
			Label:
				color: 0, 0, 0, 1
				size_hint: None, .05
				pos_hint: {'center_x': 0.5}
				text: "Right Guesses:"
			TextInput:
				size_hint: 1, .15
				pos_hint: {'center_x': 0.5}
				multiline: False
				readonly: True
				id: right_text
		HangmanArea:
			id: drawing_area
			on_size: root.draw_man()
	
	HangmanLabelSite:
		id: prompt_area
		Label:
			id: word_site
			color: 0, 0, 0, 1
			font_size: 32
			text: "_\t_\t_\t_"

<HangmanArea>:
	canvas.before:
		Color: 
			rgba: 1, 1, 1, 1
		Rectangle:
			pos: self.pos
			size: self.size

<HangmanLabelSite@BoxLayout>:
	orientation: 'vertical'
	size_hint: 1, .25
	halign: 'center'
	canvas.before:
		Color:
			rgba: .9, .9, .9, 1
		Rectangle:
			pos: self.pos
			size: self.size

<ContinuePrompt@GridLayout>:
	cols: 2
	size_hint: 1, .75
	Button:
		size_hint: .05, .05
		text: "Continue"
		on_press: root.continue_game()
	
	Button:
		size_hint: 0.5, 0.5
		text: "Quit"
		on_press: root.quit_game()
	